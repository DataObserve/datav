{
  "compilerOptions": {
    "importHelpers": true,
    "removeComments": true,
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "hooks/*": [
        "src/hooks/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "layouts/*": [
        "src/layouts/*"
      ]
    },
    "incremental": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "esnext"
    }
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
